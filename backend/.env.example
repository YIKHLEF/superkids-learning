# Environment Configuration

# Node Environment
NODE_ENV=development

# Server
PORT=5000

# Frontend URL
FRONTEND_URL=http://localhost:3000

# Database
DATABASE_URL="postgresql://user:password@localhost:5432/superkids_learning?schema=public"

# JWT
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# AWS S3 (pour le stockage de fichiers)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=us-east-1
AWS_S3_BUCKET=

# Logging
LOG_LEVEL=info
ENABLE_PROD_TELEMETRY=false
DATADOG_API_KEY=
DATADOG_LOG_URL=https://http-intake.logs.datadoghq.com/api/v2/logs
NEW_RELIC_LICENSE_KEY=

# Privacy & compliance
DATA_RETENTION_DAYS=365
DATA_ANONYMIZATION=false
COPPA_AGE_THRESHOLD=13

# Email (optionnel)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
EMAIL_FROM=noreply@superkids-learning.com

# Adaptive Engine (optionnel)
ADAPTIVE_ML_ENABLED=false
ADAPTIVE_ML_ENDPOINT=
ADAPTIVE_ML_API_KEY=
